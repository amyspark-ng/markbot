{
    "importMap": "./import_map.json",
    "compilerOptions": {
        "noImplicitAny": false
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 160,
            "indentWidth": 4,
            "singleQuote": false,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "run": "deno run -A src/client.ts",
        "dev": "deno run -A --no-check src/client.ts",
        "fmt": "deno fmt ."
    }
}
